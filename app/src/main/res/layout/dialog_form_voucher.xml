<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToOutline="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/bg_items_subgridview_support_method"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Create Voucher"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/shop_form_voucher_code"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input_style"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Voucher Code"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:textColorHint="@color/grey_100" />

            <EditText
                android:id="@+id/shop_form_voucher_title"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input_style"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Voucher Title"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:textColorHint="@color/grey_100" />

            <EditText
                android:id="@+id/shop_form_voucher_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input_style"
                android:gravity="start"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="10"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_100"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/shop_form_voucher_discount"
                    android:layout_width="120dp"
                    android:layout_height="55dp"
                    android:background="@drawable/custom_input_style"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Discount"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100" />

                <ImageView
                    android:id="@+id/shop_form_voucher_label"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/percent"
                    app:tint="@color/green_100" />


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:text="Type"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100" />

                <Spinner
                    android:id="@+id/shop_form_voucher_type"
                    android:layout_width="0sp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_custom"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:text="Convert to Percentage(%) or Dollar($) depend on Type selected"
                android:textColor="@color/green_100"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/shop_form_voucher_min"
                    android:layout_width="0sp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_input_style"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Min Price"
                    android:inputType="numberDecimal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100" />

                <EditText
                    android:id="@+id/shop_form_voucher_limit"
                    android:layout_width="0sp"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_input_style"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Limit"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100" />

                <EditText
                    android:id="@+id/shop_form_voucher_max"
                    android:layout_width="0sp"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_input_style"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Max"
                    android:inputType="numberDecimal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="Minimum price to apply voucher"
                    android:textColor="@color/green_100"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="Quantity of voucher user can save"
                    android:textColor="@color/green_100"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="Max price display"
                    android:textColor="@color/green_100"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Expire Date"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Target"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:textColorHint="@color/grey_100"/>

                <Spinner
                    android:id="@+id/shop_form_voucher_type_discount"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:background="@drawable/spinner_custom"
                    android:paddingLeft="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Day"
                        android:textColor="@color/green_100"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/shop_form_voucher_day"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_custom"
                        android:paddingStart="10dp"
                        android:spinnerDropDownItemStyle="@style/SpinnerDropdownItemStyle" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Month"
                        android:textColor="@color/green_100"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/shop_form_voucher_month"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_custom"
                        android:paddingStart="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Year"
                        android:textColor="@color/green_100"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/shop_form_voucher_year"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_custom"
                        android:paddingLeft="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shop_form_voucher_cancel"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:background="@drawable/custom_input_style_stroke_green100"
            android:fontFamily="@font/poppins_medium"
            android:text="Cancel"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/green_100"
            android:layout_marginRight="10dp"
            android:stateListAnimator="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shop_form_voucher_confirm"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:background="@drawable/custom_button_style"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirm"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</LinearLayout>