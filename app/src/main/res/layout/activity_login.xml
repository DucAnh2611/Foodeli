<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".Activities.Auth.Login.Login"
    >

    <LinearLayout
        android:id="@+id/back_logo_btn"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/login"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass_and_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Login"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            />

        <EditText
            android:id="@+id/field_form"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_input_style"
            android:paddingLeft="20dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Email or Phone number"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:textColorHint="@color/grey_100" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input_style"
                android:paddingStart="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:textColorHint="@color/grey_100"/>

            <ImageButton
                android:id="@+id/login_icon_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/eye_open"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                app:tint="@color/green_100" />

        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/forgot_link"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Forgot password?"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/orange_400" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_style"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Login"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have account?"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/signup_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Create one"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/orange_400"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>