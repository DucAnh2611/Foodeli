<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/bg_items_subgridview_support_method"
    >

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custome_button_style_third"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cancel_state"
            android:scaleType="fitCenter"
            android:scaleY="0.7"
            android:scaleX="0.7"
            app:tint="@color/orange_400" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/order_cancelled_id_and_status"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="ID: Status"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_cancelled_item_count"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="0 item"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/order_cancelled_finish"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:text="Cancelled at: "
                    android:fontFamily="@font/poppins_medium_italic"
                    android:textColor="@color/grey_100"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="19dp"
                    android:src="@drawable/dollar"
                    app:tint="@color/orange_400"
                    android:scaleType="centerCrop"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/order_cancelled_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0.0"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="@color/orange_400"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="end"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>