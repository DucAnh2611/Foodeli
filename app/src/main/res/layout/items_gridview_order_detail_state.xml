<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="false"
    >

    <LinearLayout
        android:id="@+id/order_detail_state_icon_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/order_detail_state_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/order_non_select"
            android:scaleType="centerInside"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:tint="@color/grey_100" />

        <ImageView
            android:id="@+id/order_detail_state_next"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/seperate_long"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:tint="@color/grey_100" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_state_info_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/order_detail_state_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Receive Order"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/order_detail_state_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/grey_100"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_italic"
            />

    </LinearLayout>

</LinearLayout>