<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToOutline="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/bg_items_subgridview_support_method"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Payment Form"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="From"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:background="@drawable/custom_input_style">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shop_form_user_prev_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:background="@color/green_100"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_form_user_prev_role"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Role"
                android:textColor="@color/green_100"
                android:fontFamily="@font/poppins_italic"
                android:textSize="11sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/shop_form_user_prev_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="User Name"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Permission"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/shop_form_user_perrmission"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_custom"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="To"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:background="@drawable/custom_input_style">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shop_form_user_after_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:background="@color/green_100"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_form_user_after_role"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Role"
                android:textColor="@color/green_100"
                android:fontFamily="@font/poppins_italic"
                android:textSize="11sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/shop_form_user_after_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="User Name"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shop_form_user_cancel"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:background="@drawable/custom_input_style_stroke_green100"
            android:fontFamily="@font/poppins_medium"
            android:text="Cancel"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/green_100"
            android:layout_marginRight="10dp"
            android:stateListAnimator="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shop_form_user_confirm"
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="45dp"
            android:background="@drawable/custom_button_style"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirm"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</LinearLayout>