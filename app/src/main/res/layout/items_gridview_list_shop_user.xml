<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@drawable/custom_button_style_white"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:clipToPadding="false"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_shop_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_button_style_sec"
            android:scaleType="centerCrop"
            android:src="@drawable/order_select"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button_style_white"
            android:elevation="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/rate"
                app:tint="@color/orange_400" />

            <TextView
                android:id="@+id/user_shop_rate"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginStart="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:text="5.0"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/user_shop_role"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Role"
            android:textColor="@color/green_100"
            android:fontFamily="@font/poppins_italic"
            android:textSize="11sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/user_shop_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Shop name"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_shop_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:textColor="@color/grey_100"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/user_shop_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:text="000 Sold"
                    android:fontFamily="@font/poppins_medium_italic"
                    android:textColor="@color/grey_100"
                    />


                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/seperate"
                    android:scaleType="fitXY"
                    app:tint="@color/green_100"
                    />

                <TextView
                    android:id="@+id/user_shop_product"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:text="000 Product"
                    android:fontFamily="@font/poppins_medium_italic"
                    android:textColor="@color/grey_100"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>