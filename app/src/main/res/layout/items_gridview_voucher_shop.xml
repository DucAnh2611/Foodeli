<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_input_style"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    android:padding="20dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shop_list_voucher_code"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Code"
                android:textColor="@color/green_100"
                android:fontFamily="@font/poppins_italic"
                android:textSize="11sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/item_shop_list_voucher_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/item_shop_list_voucher_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_100"
                android:gravity="start"
                android:textSize="15sp"
                android:text="Desc"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_shop_list_voucher_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/item_shop_list_voucher_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Limit: 10"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/green_100"
                    />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/more"
                    app:tint="@color/green_100"
                    android:layout_marginStart="3dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        >

        <TextView
            android:id="@+id/item_shop_list_voucher_update"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="16dp"
            android:text="Update: yyyy-mm-dd hh-mm-ss"
            android:textColor="@color/grey_100"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_italic"
            />

        <LinearLayout
            android:id="@+id/item_shop_list_voucher_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custome_button_style_third"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/trash_bin"
                app:tint="@color/orange_400"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:stateListAnimator="@null"
                android:elevation="0sp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>