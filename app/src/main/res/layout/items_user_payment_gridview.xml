<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/user_method_payment_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/custom_input_style"
        >

        <ImageView
            android:id="@+id/user_method_support_icon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/wallet_select"
            app:tint="@color/green_100"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/user_method_support_name"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Method"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical|start"
            />

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/user_method_support_is_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_arrow"
            app:tint="@color/black" />

    </LinearLayout>

    <GridView
        android:id="@+id/user_method_support_subgridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:verticalSpacing="5dp"
        />

</LinearLayout>