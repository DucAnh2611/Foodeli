<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_input_style"
    android:gravity="start"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pool_voucher_code"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textColor="@color/green_100"
            android:fontFamily="@font/poppins_medium_italic"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/item_pool_voucher_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/green_100"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/more"
                    app:tint="@color/green_100"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_pool_voucher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/item_pool_voucher_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_100"
        android:gravity="start"
        android:textSize="15sp"
        android:text="Desc"
        android:maxLines="10"
        android:ellipsize="end"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_pool_voucher_save"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="1dp"
        android:background="@drawable/custom_button_style"
        android:layout_marginTop="10dp"
        android:elevation="0sp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:stateListAnimator="@null"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>