<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_in_cart_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_item_cart_bg"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    android:gravity="start"
    >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/orderdetail_p_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/green_100"
            app:shapeAppearanceOverlay="@style/Circular"
            android:src="@drawable/mycart"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/orderdetail_p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product's name"
            android:textColor="@color/green_100"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@drawable/dollar"
                app:tint="@color/green_100"
                android:scaleType="centerCrop"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_gravity="start"
                android:contentDescription="Image product" />

            <TextView
                android:id="@+id/orderdetail_p_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="16.2"
                android:textColor="@color/green_100"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                />

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/green_100"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                />

            <TextView
                android:id="@+id/orderdetail_p_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="unit"
                android:textColor="@color/green_200"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/orderdetail_p_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quan: "
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="viewEnd"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>