<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_input_style"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    android:padding="20dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_shop_list_emp_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:background="@color/green_100"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shop_list_emp_role"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Role"
                android:textColor="@color/green_100"
                android:fontFamily="@font/poppins_italic"
                android:textSize="11sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/item_shop_list_emp_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="User Name"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_shop_list_emp_update"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="Update: yyyy-mm-dd hh-mm-ss"
        android:textColor="@color/grey_100"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_italic"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/item_shop_list_emp_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_button_style_sec">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/edit"
                app:tint="@color/green_100"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:stateListAnimator="@null"
                android:elevation="0sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_shop_list_emp_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custome_button_style_third"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/trash_bin"
                app:tint="@color/orange_400"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:stateListAnimator="@null"
                android:elevation="0sp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>