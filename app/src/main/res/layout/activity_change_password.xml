<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/green_100"
    tools:context=".Activities.Auth.ForgotPassword.ChangePassword">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/previous_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:backgroundTint="@color/white"
        app:tint="@color/green_100"
        android:src="@drawable/back"
        android:elevation="0dp"
        app:elevation="0dp"

        app:borderWidth="0dp"
        app:fabCustomSize="40dp"
        app:fabSize="auto"

        android:contentDescription="back"/>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:paddingBottom="20dp"
        android:src="@drawable/new_password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change your password to a new one"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="@color/grey_100"
            />

        <EditText
            android:id="@+id/pass_form"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_input_style"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="New password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:textColorHint="@color/grey_100" />

        <EditText
            android:id="@+id/cf_pass_form"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_input_style"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:textColorHint="@color/grey_100" />

        <Button
            android:id="@+id/btn_change_pw"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_button_style"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="Confirm"
            />
    </LinearLayout>


</LinearLayout>