<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PoolVoucherShop.PoolVoucherShop"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="30dp"
        android:background="@drawable/bg_items_subgridview_support_method">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_2"
            android:scaleType="centerInside"
            app:tint="@color/green_100"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green_100"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Shop Voucher"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pool_voucher_gridview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView
            android:id="@+id/pool_voucher_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="10dp"
            android:padding="20dp"
            android:scrollbars="none"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/pool_voucher_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:src="@drawable/no_data"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/pool_voucher_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/skeleton_loading"
                    android:gravity="start"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_gravity="right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/skeleton_loading"
                    android:gravity="start"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_gravity="right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/skeleton_loading"
                    android:gravity="start"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_gravity="right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/skeleton_loading"
                    android:gravity="start"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_gravity="right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/skeleton_loading"
                    android:gravity="start"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"/>

                        <View
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_loading_sec"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_marginBottom="5dp"
                        />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/skeleton_loading_sec"
                        android:layout_gravity="right"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>