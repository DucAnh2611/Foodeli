<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Order.OrderFragmentLayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_100"
            android:textSize="25dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Order"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabMode="fixed"
        app:tabBackground="@drawable/tab_selected"
        app:tabTextColor="@color/grey_200"
        app:tabSelectedTextColor="@color/green_100"
        app:tabSelectedTextAppearance="@style/TabSelectTextAppearance"
        app:tabTextAppearance="@style/TabNotSelectTextAppearance"
        android:background="@drawable/bg_items_subgridview_support_method"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>